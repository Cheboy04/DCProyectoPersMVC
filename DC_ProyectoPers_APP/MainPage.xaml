<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DC_ProyectoPers_APP.MainPage">

    <StackLayout>
        <Label
            Text="Bienvenidos a la mejor tienda online de Bebidas!"
            Style="{StaticResource Headline}"
            SemanticProperties.HeadingLevel="Level1" />
        <Label
            Text="Nuestro catálogo lo podrán encontrar al hacer click en el boton."
            Style="{StaticResource SubHeadline}"
            SemanticProperties.HeadingLevel="Level2"
            SemanticProperties.Description="Catálogo" />
        <Button Text="Dame CLICK"
                Clicked="DC_BotonAPI"
                HorizontalOptions="Center"/>
        <ListView x:Name="DC_Lista">
           <ListView.ItemTemplate>
               <DataTemplate>
                  <TextCell Text="{Binding DC_Nombre}" />
               </DataTemplate>
           </ListView.ItemTemplate>
        </ListView>
    </StackLayout>

</ContentPage>
